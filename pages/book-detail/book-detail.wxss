.container{background: #f5f5f5;width: 100%}
.title{color: #2f2f2f;margin-top: 28rpx;font-size: 38rpx;font-weight: 600}
.author{font-size: 28rpx;color: #aaa}
.head{display: flex;flex-direction: column;align-items: center;background: #fff;padding-bottom: 40rpx;padding-top: 40rpx}
.head image{width: 200rpx;height: 300rpx;box-shadow: 2px 2px 3px #e3e3e3}
.sub-container{width: 690rpx;display: flex;flex-direction: column;align-items: center;margin-top: 30rpx;background: #fff;padding: 30rpx}
.headline{
  font-size: 30rpx;font-weight: 600;color: #2f2f2f;margin-bottom: 20rpx
}
.container-comments{display: flex;flex-direction: row;flex-wrap: wrap}
.container-comments v-tag{margin-right: 15rpx;margin-bottom: 10rpx}
.num{margin-left: 10rpx;font-size: 22rpx;color: #aaa}
